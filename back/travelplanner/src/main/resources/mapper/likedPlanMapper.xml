<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="LikedPlan">
    <insert id="save" parameterType="likePlan">
        insert into liked_plan(member_id, plan_id)
        values(#{memberId}, #{planId})
    </insert>
    <select id="likeExist" resultType="boolean" parameterType="likePlan">
        select IF(COUNT(*) >= 1, 1, 0)
        from liked_plan
        where member_id = #{memberId} and plan_id = #{planId}
    </select>
    <delete id="delete" parameterType="likePlan">
        delete from liked_plan
        where member_id = #{memberId} and plan_id = #{planId}
    </delete>
</mapper>